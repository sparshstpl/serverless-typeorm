{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata" :true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "allowJs": true,
    "target": "es2017",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "baseUrl": ".",
    "rootDir": "./",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}
